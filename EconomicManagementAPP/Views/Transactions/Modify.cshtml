@model Transactions

@{
    ViewData["Title"] = "Modify Transaction";
}

<h1>Modify Transaction: @Model.Id</h1>
<div asp-validation-summary="ModelOnly" class="text-danger"></div>

<form asp-action="Modify">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="Total" class="form-label"></label>
        <input type="number" asp-for="Total" class="form-control" />
        <span asp-validation-for="Total" class="form-control" />
    </div>

    <div class="mb-3">
        <label asp-for="Description" class="form-label"></label>
        <input type="text" asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Modify</button>
    <a class="btn btn-secondary" asp-action="Index">Cancel</a>
</form>

@section Scripts {
<partial name="_ValidationScriptsPartial" />
}

